# EcoCusco - Nginx Configuration Example
# Copy this file to your nginx sites-available directory and adjust paths

server {
    listen 80;
    listen [::]:80;
    
    # Change this to your domain
    server_name ecocusco.local www.ecocusco.local;
    
    # Document root
    root /path/to/reciclaje_platform_mvc/public;
    index index.php index.html index.htm;
    
    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header Referrer-Policy "no-referrer-when-downgrade" always;
    add_header Content-Security-Policy "default-src 'self' http: https: data: blob: 'unsafe-inline'" always;
    
    # Gzip compression
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_proxied expired no-cache no-store private must-revalidate auth;
    gzip_types
        text/plain
        text/css
        text/xml
        text/javascript
        application/javascript
        application/xml+rss
        application/json;
    
    # Handle main routing
    location / {
        try_files $uri $uri/ /index.php?$query_string;
    }
    
    # Handle API routes specifically
    location /api {
        try_files $uri $uri/ /index.php?$query_string;
    }
    
    # PHP handling
    location ~ \.php$ {
        fastcgi_split_path_info ^(.+\.php)(/.+)$;
        fastcgi_pass unix:/var/run/php/php8.1-fpm.sock; # Adjust PHP version as needed
        fastcgi_index index.php;
        fastcgi_param SCRIPT_FILENAME $realpath_root$fastcgi_script_name;
        include fastcgi_params;
        
        # Prevent PHP execution in uploads directory
        location ~ ^/uploads/.*\.php$ {
            deny all;
        }
    }
    
    # Static file caching
    location ~* \.(jpg|jpeg|png|gif|ico|css|js|pdf|txt|svg|woff|woff2|ttf|eot)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
        access_log off;
    }
    
    # Deny access to sensitive files
    location ~ /\. {
        deny all;
        access_log off;
    }
    
    location ~ /(\.env|composer\.(json|lock)|package\.json|\.git) {
        deny all;
        access_log off;
    }
    
    # Deny access to backup files
    location ~* \.(bak|backup|swp|tmp)$ {
        deny all;
        access_log off;
    }
    
    # Security: Don't log favicon.ico and robots.txt
    location = /favicon.ico {
        log_not_found off;
        access_log off;
    }
    
    location = /robots.txt {
        log_not_found off;
        access_log off;
        allow all;
    }
    
    # Rate limiting (adjust as needed)
    location /api/ {
        limit_req zone=api burst=10 nodelay;
        try_files $uri $uri/ /index.php?$query_string;
    }
    
    # File upload size limit
    client_max_body_size 10M;
    
    # Error pages
    error_page 404 /index.php;
    error_page 500 502 503 504 /index.php;
    
    # Logging
    error_log /var/log/nginx/ecocusco_error.log;
    access_log /var/log/nginx/ecocusco_access.log;
}

